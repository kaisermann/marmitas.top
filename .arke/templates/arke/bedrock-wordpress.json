{
  "project": {
    "repo": "git@github.com:user/repo.git",
    "type": "bedrock-wordpress",
    "fileStructure": {
      "shared": [
        ["robots.txt"],
        [".htaccess"],
        [".env"],
        ["web/app/uploads", "uploads"]
      ]
    },
    "cmds": {
      "install": [
        ["", "composer install"],
        ["web/app/themes/selene", "composer install"],
        ["web/app/themes/selene", "yarn"]
      ],
      "afterDeploy": [
        ["", "rm -rf fabfile.py arke.json .arke readme.md .editorconfig"],
        ["", "composer install"],
        ["web/app/themes/selene", "composer install"]
      ]
    },
    "maxReleases": 5
  },
  "hosts": {
    "staging": {
      "hosts": ["127.0.0.1"],
      "name": "example.com",
      "projectDir": "/var/www",
      "projectPublicDir": "htdocs",
      "webRootDir": "web",
      "hostnames": "example.com www.example.com",
      "webServerUser": "www-data",
      "webServerGroup": "www-data",
      "services": {
        "toRestart": ["php5.6-fpm"],
        "toReload": ["nginx"]
      }
    }
  }
}
