.card-grid
  font-size: 0

.card-grid__title
  margin-bottom: 15px

.card-grid__item
  display: inline-block
  max-width: 100%
  width: 600px
  vertical-align: top
  margin-bottom: 50px

.card
  display: inline-block
  width: 100%
  font-size: 1rem
  overflow: hidden
  line-height: 1.4

.card__title
  font-size: 20px
  font-weight: bold

.card__row
  padding: 5px 0

  + .card__row
    border-top: 1px solid #ddd

.card__label
  font-weight: bold
  font-size: 12px
  color: #777
  margin-bottom: 5px

.card__value
  &.-text
    line-height: 1.6

.price-table
  @extend .h-display-flex
  @extend .-justify-start\\\@xs

  &.-single
    .price-entry
      flex: 0

  &:not(.-single)
    padding: 10px 0

    .price-entry__value
      margin-bottom: 5px

    .price-entry
      padding: 0 5px
      +below(xs)
        .price-entry__description
          font-size: 10px

.price-entry
  text-align: center
  flex: 1

  + .price-entry
    border-left: 1px solid #ddd

.price-entry__description
  font-size: 12px
